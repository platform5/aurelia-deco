{
  "name": "aurelia-deco",
  "version": "2.0.6",
  "description": "Aurelia plugin to mirror deco-api features",
  "keywords": [
    "aurelia",
    "plugin"
  ],
  "main": "dist/commonjs/index.js",
  "typings": "dist/commonjs/index.d.ts",
  "scripts": {
    "tsc": "tsc",
    "lint": "cross-env tslint --project tsconfig.json",
    "pretest": "cross-env npm run lint",
    "test": "cross-env jest",
    "dico": "ts-node --project dico-tool/tsconfig.json dico-tool/parse.ts",
    "dico:send": "ts-node --project dico-tool/tsconfig.json dico-tool/send.ts",
    "test-watch": "concurrently \"./node_modules/.bin/tsc --watch\" \"./node_modules/.bin/karma start\"",
    "build:amd": "cross-env tsc --outDir dist/amd --module amd",
    "build:commonjs": "cross-env tsc --outDir dist/commonjs --module commonjs",
    "build:es2015": "cross-env tsc --outDir dist/es2015 --module es2015",
    "build:native-modules": "cross-env tsc --outDir dist/native-modules --module es2015",
    "build:wp": "cross-env tsc --outDir dist/native-modules --module es2015 & gulp",
    "build:system": "cross-env tsc --outDir dist/system --module system",
    "prebuild": "cross-env rimraf dist",
    "postbuild": "gulp",
    "build": "concurrently \"npm run build:amd\" \"npm run build:commonjs\" \"npm run build:es2015\" \"npm run build:native-modules\" \"npm run build:system\"",
    "prepare-release": "cross-env npm run build && semantic-release pre && npm publish && semantic-release post"
  },
  "jest": {
    "modulePaths": [
      "<rootDir>/src",
      "<rootDir>/node_modules"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js",
      "^.+\\.(scss|css)$": "<rootDir>/node_modules/jest-css-modules"
    },
    "testRegex": "\\.spec\\.(ts|js)x?$",
    "setupFiles": [
      "<rootDir>/test/jest-pretest.ts"
    ],
    "testEnvironment": "node",
    "moduleNameMapper": {
      "aurelia-(.*)": "<rootDir>/node_modules/$1",
      "^.+\\.(css)$": "<rootDir>/test/jest-css-stub.js"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,ts}",
      "!**/*.spec.{js,ts}",
      "!**/node_modules/**",
      "!**/test/**"
    ],
    "coverageDirectory": "<rootDir>/test/coverage-jest",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ],
    "mapCoverage": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/platform5/aurelia-deco"
  },
  "author": "Ben Girardet",
  "license": "AGPL",
  "homepage": "https://platform5.ch",
  "bugs": {
    "url": "https://github.com/platform5/aurelia-deco/issues"
  },
  "jspm": {
    "registry": "npm",
    "jspmPackage": true,
    "main": "index",
    "format": "cjs",
    "directories": {
      "dist": "dist/commonjs"
    }
  },
  "dependencies": {
    "@aurelia-ux/core": "^0.24.0",
    "@aurelia-ux/modal": "^0.24.0",
    "aurelia-binding": "^2.1.4",
    "aurelia-resources": "git+https://github.com/platform5/aurelia-resources.git#3324c77a7737e2e3df8b67c1bb0c4d6d3c78d21f",
    "aurelia-dialog": "^2.0.0",
    "aurelia-event-aggregator": "^1.0.1",
    "aurelia-fetch-client": "^1.4.0",
    "aurelia-framework": "^1.3.0",
    "aurelia-i18n": "^2.3.2",
    "aurelia-loader": "^1.0.0",
    "aurelia-logging": "^1.5.0",
    "aurelia-metadata": "^1.0.4",
    "aurelia-pal": "^1.8.0",
    "aurelia-path": "^1.1.1",
    "aurelia-router": "^1.6.3",
    "aurelia-store": "^1.4.0",
    "aurelia-task-queue": "^1.3.1",
    "aurelia-templating": "^1.8.2",
    "aurelia-templating-binding": "^1.4.3",
    "aurelia-ui-virtualization": "^1.0.0-beta.7",
    "aurelia-validation": "^1.2.2",
    "awesome-phonenumber": "^2.3.2",
    "gulp-typescript": "^5.0.1",
    "i18next": "19.8.4",
    "i18next-xhr-backend": "^3.2.2",
    "moment": "^2.21.0",
    "node-html-parser": "^1.2.20",
    "ts-node": "^9.0.0",
    "whatwg-fetch": "^3.0.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.25",
    "@types/node": "^13.13.17",
    "aurelia-bootstrapper": "^2.3.0",
    "aurelia-loader-nodejs": "^1.0.1",
    "aurelia-pal-browser": "^1.3.0",
    "aurelia-pal-nodejs": "^1.0.0-beta.2.0.0",
    "aurelia-polyfills": "^1.3.0",
    "aurelia-testing": "^1.0.0-beta.4.0.0",
    "concurrently": "^5.0.2",
    "cross-env": "^6.0.3",
    "gulp": "^4.0.0",
    "gulp-sass": "^4.0.2",
    "jest": "^24.9.0",
    "jest-css-modules": "^2.1.0",
    "node-sass": "^4.6.0",
    "rimraf": "^3.0.0",
    "semantic-release": "^16.0.1",
    "ts-jest": "^24.3.0",
    "tslint": "^5.8.0",
    "typescript": "^3.6.4"
  }
}
